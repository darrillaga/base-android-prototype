<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recipesViewModel"
            type="me.darrillaga.prototype.viewer.recipes.viewmodel.RecipeViewModel"/>

        <variable
            name="eventsHandler"
            type="me.darrillaga.prototype.viewer.recipes.view.RecipesEventsHandler"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@color/primary"
                    app:titleTextColor="@color/white"
                    app:title="@string/shelters_title">
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/children_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_bar"
                android:clipToPadding="false"
                app:eventsHandler="@{eventsHandler}"
                app:dataSet="@{sheltersViewModel.sheltersItemViewModels}"
                android:layout_alignParentEnd="true"
                android:background="@color/soft_transparent_grey">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:layout_marginBottom="@dimen/medium_spacing"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:tint="@color/red_800"
            app:elevation="@dimen/xsmall_size"
            app:pressedTranslationZ="@dimen/small_size"
            android:onClick="@{eventsHandler::onAddRecipeClick}"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>