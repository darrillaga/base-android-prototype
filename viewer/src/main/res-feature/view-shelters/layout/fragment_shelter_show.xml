<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sheltersItemViewModel"
            type="me.darrillaga.prototype.viewer.shelters.viewmodel.SheltersItemViewModel"/>

        <variable
            name="eventsHandler"
            type="me.darrillaga.prototype.viewer.shelters.view.SheltersItemEventsHandler"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    android:background="@color/primary"
                    app:titleTextColor="@color/white"
                    app:title="@{sheltersItemViewModel.name}">
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <me.darrillaga.prototype.view.util.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_bar"
                app:refreshing="@{sheltersItemViewModel.refreshing}"
                app:onRefreshListener="@{() -> eventsHandler.refresh()}">

                <ScrollView
                    android:id="@+id/children_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:layout_alignParentEnd="true"
                    android:background="@color/soft_transparent_grey">
    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/medium_spacing"
                            android:layout_marginBottom="@dimen/medium_spacing"
                            android:textSize="@dimen/xxxxlarge_text"
                            android:text="@{sheltersItemViewModel.day}"
                            tools:text="Día 5"/>
    
                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/small_spacing"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
    
                            <com.github.mikephil.charting.charts.LineChart
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/chart_height"
                                android:layout_margin="@dimen/medium_spacing"
                                android:padding="@dimen/small_spacing"
                                app:dataSet="@{sheltersItemViewModel}"/>
    
                        </android.support.v7.widget.CardView>
    
                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/small_spacing"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
    
                            <LinearLayout
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:padding="@dimen/medium_spacing">
    
                                <LinearLayout
                                    android:layout_width="@dimen/zero"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_below="@+id/sell_price"
                                        android:layout_marginTop="@dimen/small_spacing"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:textSize="@dimen/small_text"
                                        android:text="@string/thin_thick_index"/>
    
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/small_spacing"
                                        android:layout_gravity="center_horizontal"
                                        android:orientation="horizontal">
    
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/sell_price"
                                            android:layout_gravity="center_vertical"
                                            android:gravity="center_vertical"
                                            android:textSize="@dimen/xxlarge_text"
                                            android:text="@{sheltersItemViewModel.thinThickIndex}"
                                            tools:text="1.3108"/>
    
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/ic_up_arrow_green_24dp"/>
                                    </LinearLayout>
    
                                </LinearLayout>
    
                                <LinearLayout
                                    android:layout_width="@dimen/zero"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_below="@+id/sell_price"
                                        android:layout_marginTop="@dimen/small_spacing"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:textSize="@dimen/small_text"
                                        android:text="@string/cost_per_meat_kg"/>
    
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/sell_price"
                                        android:layout_marginTop="@dimen/small_spacing"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/xxlarge_text"
                                        android:text="@{sheltersItemViewModel.meatPerKiloCost}"
                                        tools:text="1,8 USD/Kg"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
    
                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/small_spacing"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
    
                            <RelativeLayout
                                android:background="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/medium_spacing">
    
                                <TextView
                                    android:id="@+id/sell_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/xlarge_text"
                                    android:text="@{@string/sell_price(sheltersItemViewModel.sellPrice)}"
                                    tools:text="Precio venta: 2.10 USD/Kg"/>
    
                                <TextView
                                    android:id="@+id/recipe_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/sell_price"
                                    android:layout_marginTop="@dimen/small_spacing"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/xlarge_text"
                                    android:text="@{@string/recipe_price(sheltersItemViewModel.recipePrice)}"
                                    tools:text="Precio compra de ración: 2.00 USD/Kg"/>
    
                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/profitability_chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/chart_height"
                                    android:layout_below="@+id/recipe_price"
                                    android:layout_marginTop="@dimen/medium_spacing"
                                    app:dataSetProfitability="@{sheltersItemViewModel}"/>
    
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/small_spacing"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:background="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/medium_spacing">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/current_diet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/small_spacing"
                                    android:layout_alignParentLeft="true"
                                    android:layout_toStartOf="@+id/price"
                                    android:textSize="@dimen/large_text"
                                    android:textStyle="bold"
                                    android:text="@string/current_diet"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/medium_spacing"
                                    android:layout_below="@+id/current_diet"
                                    android:layout_alignParentLeft="true"
                                    android:layout_toStartOf="@+id/price"
                                    android:textStyle="bold"
                                    android:text="@{sheltersItemViewModel.currentRecipeViewModel.name}"
                                    tools:text="Dieta 1"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small_spacing"
                                    android:layout_toStartOf="@+id/price"
                                    android:layout_below="@+id/name"
                                    android:text="@{sheltersItemViewModel.currentRecipeViewModel.description}"
                                    tools:text="Esta es una pokebola especial que los atrapa más fácil"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginLeft="@dimen/small_spacing"
                                    android:minWidth="@dimen/large_size"
                                    android:gravity="center"
                                    android:text="@{sheltersItemViewModel.currentRecipeViewModel.pricePerKg}"
                                    android:textSize="@dimen/xlarge_text"
                                    tools:text="2.00 USD/kg"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/energy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@+id/price"
                                    android:layout_marginLeft="@dimen/small_spacing"
                                    android:layout_marginTop="@dimen/small_spacing"
                                    android:text="@{sheltersItemViewModel.currentRecipeViewModel.energy}"
                                    tools:text="1200 kcal/kg"/>

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/kg_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@+id/energy"
                                    android:layout_marginLeft="@dimen/small_spacing"
                                    android:layout_marginTop="@dimen/small_spacing"
                                    android:text="@{sheltersItemViewModel.currentRecipeViewModel.kgIncreaseIntoAnimal}"
                                    tools:text="1.200 Kg/día"/>

                                <android.support.v7.widget.AppCompatButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/kg_day"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/medium_spacing"
                                    style="@style/Widget.AppCompat.Button.Colored"
                                    android:onClick="@{eventsHandler::onChangeRecipeClick}"
                                    android:text="@string/change_recipe"/>

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </me.darrillaga.prototype.view.util.SwipeRefreshLayout>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>